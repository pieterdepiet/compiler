class Greeter {
    var greetCount : Int;
    var greetstring : String;
    fun setGreet(to str : String) {
        this.greetstring = str;
    }
    fun greet() {
        prints(this.greetstring);
        this.greetCount += 1;
    }
    fun greet(_ str : String) {
        prints(str);
    }
    fun getGreetCount() : Int {
        return this.greetCount;
    }
}

fun start() {
    var g : Greeter = new Greeter();
    var a : String = "Hello world!";
    var local : Greeter;
    local.setGreet(to: "Local greet");
    local.greetCount = 5;
    g.setGreet(to: a);
    g.greet();
    local.greet();
    print(local.getGreetCount());
    local.greet("Bye!");
}